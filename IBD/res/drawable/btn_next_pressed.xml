<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item><layer-list>
            <item><shape>
                    

                    <!-- this is to give gradient effect -->
                    <solid android:color="@color/sp_focuse" />
                    <!-- this is make corners of button rounded -->
                    <stroke android:width="4dip" android:color="@color/off_black" />

                    <corners android:bottomLeftRadius="5dp" android:bottomRightRadius="5dp" android:topLeftRadius="5dp" android:topRightRadius="5dp" />
                </shape></item>
            <item><bitmap android:filter="true" android:gravity="center" android:src="@drawable/icon_next_pressed" />
            </item>
        </layer-list></item>

</selector>