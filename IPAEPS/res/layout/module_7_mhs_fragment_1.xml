<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/linear_layout_ibd_2"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray_1"
    android:orientation="vertical"
    android:paddingBottom="@dimen/start_page_content_padding_top"
    android:paddingLeft="@dimen/start_page_padding_lefr_right"
    android:paddingRight="@dimen/start_page_padding_lefr_right"
    android:paddingTop="@dimen/start_page_content_padding_top" >

    <RelativeLayout
        android:id="@+id/q_module_7_splash_layut"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <com.rimon.rsa.ipaeps.textview.TitleTextView
            android:id="@+id/tv_moudle_7_splash"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_margin="@dimen/start_btn_mrgin_l_r_t"
            android:enabled="false"
            android:gravity="center|left"
            android:text="@string/mental_health_headline"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="@color/black"
            android:textSize="@dimen/title_font_size" />

        <include
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_margin="@dimen/start_btn_mrgin_l_r_t"
            layout="@layout/btn_next" />
    </RelativeLayout>

</LinearLayout>