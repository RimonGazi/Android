<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="fill_parent"
    android:background="@color/gray_1"
    android:fillViewport="true"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:orientation="vertical"
    android:paddingLeft="@dimen/start_page_padding_lefr_right"
    android:paddingRight="@dimen/start_page_padding_lefr_right"
    android:paddingTop="@dimen/start_page_content_padding_top" >

    <LinearLayout
        android:id="@+id/linear_layout_goal_13_2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <com.rimon.rsa.ipaeps.textview.AnyTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/start_btn_mrgin_l_r_t"
            android:gravity="center|left"
            android:text="@string/i_would_like"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="@color/color_state_1"
            android:textSize="@dimen/btn_text_size" />

        <com.rimon.rsa.ipaeps.textview.AnyTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/start_btn_mrgin_l_r_t"
            android:gravity="center"
            android:text="@string/goal_2"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="@color/color_state_1"
            android:textSize="@dimen/btn_text_size" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <com.rimon.rsa.ipaeps.button.AnyButton
                android:id="@+id/btn_ga_q_module_13_4"
                style="?android:attr/borderlessButtonStyle"
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/start_btn_mrgin_l_r_t"
                android:layout_weight="@integer/moduel_4_drug_weight"
                android:background="@drawable/btn_left_start_state"
                android:drawable="@drawable/btn_right_start_state"
                android:drawableRight="@drawable/btn_right_start_state"
                android:gravity="left|center_vertical"
                android:paddingBottom="@dimen/btn_text_padding_t_b"
                android:paddingLeft="@dimen/btn_text_padding_l_r"
                android:paddingTop="@dimen/btn_text_padding_t_b"
                android:text="@string/general_area"
                android:textColor="@color/color_state_1"
                android:textSize="@dimen/btn_text_size" />

            <com.rimon.rsa.ipaeps.button.AnyButton
                android:id="@+id/btn_sg_q_module_13_5"
                style="?android:attr/borderlessButtonStyle"
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/start_btn_mrgin_l_r_t"
                android:layout_weight="@integer/moduel_4_dosage_weight"
                android:background="@drawable/btn_next_bacground"
                android:drawableLeft="@drawable/btn_goals_backgrount_left"
                android:enabled="false"
                android:gravity="left|center_vertical"
                android:padding="@dimen/btn_text_padding_t_b"
                android:text="@string/specific_goal"
                android:textColor="@color/color_state_1"
                android:textSize="@dimen/btn_text_size" />
        </LinearLayout>

        <com.rimon.rsa.ipaeps.edittext.AnyEditText
            android:id="@+id/et_sg_module_13_5"
            android:layout_width="match_parent"
            android:layout_height="@dimen/edit_text_height"
            android:layout_margin="@dimen/start_btn_mrgin_l_r_t"
            android:background="@drawable/btn_bacground"
            android:ems="10"
            android:enabled="false"
            android:gravity="left|center_vertical"
            android:hint="@string/specific_goal"
            android:inputType="textMultiLine"
            android:paddingLeft="@dimen/start_btn_padding_l_r"
            android:scrollHorizontally="false"
            android:textColor="@color/color_state_1"
            android:textSize="@dimen/start_page_text_size" >
        </com.rimon.rsa.ipaeps.edittext.AnyEditText>

        <com.rimon.rsa.ipaeps.textview.AnyTextView
            android:id="@+id/tv_module_13_goal_title_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/start_btn_mrgin_l_r_t"
            android:gravity="center|left"
            android:text="@string/how_confident_are"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="@color/color_state_1"
            android:textSize="@dimen/btn_text_size" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/start_btn_mrgin_l_r_t"
            android:baselineAligned="false"
            android:gravity="center"
            android:orientation="horizontal" >

            <LinearLayout
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:layout_weight=".2"
                android:gravity="center" >

                <com.rimon.rsa.ipaeps.textview.AnyTextView
                    android:id="@+id/tv_13_sk_1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="@string/no_confidence"
                    android:textColor="@color/color_state_1"
                    android:textSize="@dimen/radio_text_size_2" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dip"
                android:layout_height="fill_parent"
                android:layout_weight=".6"
                android:gravity="center"
                android:orientation="vertical" >

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/start_btn_mrgin_l_r_t"
                    android:layout_marginRight="@dimen/start_btn_mrgin_l_r_t"
                    android:gravity="center_horizontal" >

                    <com.rimon.rsa.ipaeps.textview.AnyTextView
                        android:id="@+id/tv_score_1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentTop="true"
                        android:text="@string/score"
                        android:textColor="@color/color_state_1"
                        android:textSize="@dimen/seek_bar_text_size" />

                    <com.rimon.rsa.ipaeps.textview.AnyTextView
                        android:id="@+id/tv_score_6"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:layout_toRightOf="@+id/tv_score_1"
                        android:text="@string/zero"
                        android:textColor="@color/color_state_1"
                        android:textSize="@dimen/seek_bar_text_size" />

                    <com.rimon.rsa.ipaeps.textview.AnyTextView
                        android:id="@+id/tv_score_3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:layout_toRightOf="@+id/tv_score_6"
                        android:text="@string/score_2"
                        android:textColor="@color/color_state_1"
                        android:textSize="@dimen/seek_bar_text_size" />
                </RelativeLayout>

                <SeekBar
                    android:id="@+id/skb__q_module_13_6"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/start_btn_mrgin_l_r_t"
                    android:max="100"
                    android:progress="0"
                    android:progressDrawable="@drawable/progressbar" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:layout_weight=".2"
                android:gravity="center" >

                <com.rimon.rsa.ipaeps.textview.AnyTextView
                    android:id="@+id/tv_13_sk_2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="@string/complete_confidence"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:textColor="@color/color_state_1"
                    android:textSize="@dimen/radio_text_size_2" />
            </LinearLayout>
        </LinearLayout>

        <include
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/start_btn_mrgin_l_r_t"
            layout="@layout/btn_previous" />

        <include
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/start_btn_mrgin_l_r_t"
            layout="@layout/btn_next" />
    </LinearLayout>

</ScrollView>