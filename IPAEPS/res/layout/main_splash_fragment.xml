<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/splash_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/linearLayout4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:gravity="center_horizontal"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/imageView1"
            android:layout_width="@dimen/ibd_weidth"
            android:layout_height="@dimen/ibd_height"
            android:layout_marginLeft="@dimen/start_page_content_mrgin_top"
            android:layout_marginRight="@dimen/start_page_content_mrgin_top"
            android:background="@drawable/ibd3"
            android:contentDescription="@string/app_name"
            android:padding="@dimen/start_page_content_mrgin_top"
            android:scaleType="centerCrop" />

        <com.rimon.rsa.ipaeps.textview.TitleTextView
            android:id="@+id/tv_splash_hint"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/start_btn_mrgin_l_r_t"
            android:gravity="center"
            android:padding="0dip"
            android:text="@string/splash_title_buttom"
            android:textColor="@android:color/white"
            android:textSize="@dimen/start_page_text_size" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/linearLayout4"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:gravity="center"
        android:orientation="vertical" >

        <com.rimon.rsa.ipaeps.textview.TitleTextView
            android:id="@+id/tv_splash"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/splash_title"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="@android:color/white"
            android:textSize="@dimen/title_font_size" />

        <ImageView
            android:id="@+id/image_splash"
            android:layout_width="@dimen/splash_im_width"
            android:layout_height="@dimen/splash_im_height"
            android:layout_marginTop="@dimen/start_btn_mrgin_l_r_t"
            android:contentDescription="@string/app_name"
            android:src="@drawable/splash_main" />
    </LinearLayout>

</RelativeLayout>