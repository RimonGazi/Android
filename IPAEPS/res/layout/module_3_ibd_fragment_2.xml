                android:textSize="@dimen/btn_text_size" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="0dip" >

                <RadioGroup
                    android:id="@+id/rg_q_module_3_9"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
