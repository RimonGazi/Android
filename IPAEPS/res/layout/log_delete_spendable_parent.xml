<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="0dip"
    android:background="@color/white"
    android:orientation="vertical"
    android:paddingBottom="0dip"
    android:paddingRight="0dip"
    android:paddingTop="0dip" >

    <LinearLayout
        android:id="@+id/linearLayout3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/linearLayout2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:gravity="center"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/im_delete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/log_delete_margin_left"
            android:contentDescription="@string/menu_delete"
            android:gravity="center"
            android:src="@drawable/ic_unchecked" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_toLeftOf="@+id/linearLayout1"
        android:layout_toRightOf="@+id/linearLayout3"
        android:orientation="vertical" >

        <com.rimon.rsa.ipaeps.textview.TitleTextView
            android:id="@+id/patient_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/log_parent_view_margin"
            android:gravity="left"
            android:padding="@dimen/log_parent_view_padding"
            android:textColor="@color/black"
            android:textStyle="bold" />

        <com.rimon.rsa.ipaeps.textview.TitleTextView
            android:id="@+id/gs_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/log_parent_view_margin"
            android:gravity="left"
            android:padding="@dimen/log_parent_view_padding"
            android:textColor="@color/black"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/linearLayout2"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:orientation="vertical" >

        <com.rimon.rsa.ipaeps.textview.TitleTextView
            android:id="@+id/date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/log_parent_view_margin"
            android:gravity="left"
            android:padding="@dimen/log_parent_view_padding"
            android:textColor="@color/black"
            android:textStyle="bold" />

        <com.rimon.rsa.ipaeps.textview.TitleTextView
            android:id="@+id/time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/log_parent_view_margin"
            android:gravity="left"
            android:padding="@dimen/log_parent_view_padding"
            android:textColor="@color/black"
            android:textStyle="bold" />
    </LinearLayout>

</RelativeLayout>