<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/yellow"
    android:orientation="vertical"
    android:padding="@dimen/widght_padding" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:orientation="vertical"
        android:padding="@dimen/widght_padding" >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/widght_padding_3"
            android:text="@string/rrd_motivo_para_recolhimento"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@color/whight" />

        <EditText
            android:id="@+id/et_rrd_motivo_para_recolhimento"
            android:layout_width="match_parent"
            android:layout_height="140dip"
            android:background="@color/yellow_light"
            android:ellipsize="start"
            android:ems="10"
            android:gravity="top"
            android:inputType="textMultiLine|textCapSentences"
            android:textColor="@color/whight"
            android:textCursorDrawable="@null" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/widght_padding_3"
            android:text="@string/rrd_qtd_de_dias_para_regularizacao"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@color/whight" />

        <Spinner
            android:id="@+id/spinner_rrd_qtd_de_dias_para_regularizacao"
            style="@style/Theam.Spinner_theam"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/widght_padding" />

        <Button
            android:id="@+id/btn_rrd_gerar"
            style="?android:attr/buttonBarButtonStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/indicator_width"
            android:layout_marginTop="@dimen/widght_padding"
            android:background="@drawable/btn_yellow_2"
            android:padding="@dimen/widght_padding"
            android:text="@string/gerar"
            android:textColor="@color/whight" />
    </LinearLayout>

</ScrollView>