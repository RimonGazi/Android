            <Spinner
                android:id="@+id/q6a1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/q62"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="เด็กได้เข้าเรียนตามเกณฑ์ หรือเด็กจบการศึกษาภาคบังคับ (ม.3)" />

            <Spinner
                android:id="@+id/q6a2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </ScrollView>

</RelativeLayout>