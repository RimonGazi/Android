<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/manual_input_bacground"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".Login" >

    <LinearLayout
        android:id="@+id/linearLayout_sing_in"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:background="@drawable/manual_input_layout_shape"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/singin_title"
            android:layout_width="match_parent"
            android:layout_height="50dip"
            android:background="@drawable/manual_input_title_text_style"
            android:gravity="center|top"
            android:text="@string/login"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@color/manual_input_title_text" />

        <EditText
            android:id="@+id/sing_in_username"
            android:layout_width="match_parent"
            android:layout_height="55dip"
            android:layout_marginLeft="35dip"
            android:layout_marginRight="35dip"
            android:layout_marginTop="25dip"
            android:background="@drawable/edit_text"
            android:ems="4"
            android:gravity="center"
            android:hint="@string/user_name_login"
            android:inputType="text"
            android:maxLength="10" />

        <EditText
            android:id="@+id/sing_in_password"
            android:layout_width="match_parent"
            android:layout_height="55dip"
            android:layout_marginLeft="35dip"
            android:layout_marginRight="35dip"
            android:layout_marginTop="15dip"
            android:background="@drawable/edit_text"
            android:ems="4"
            android:gravity="center"
            android:hint="@string/user_password_login"
            android:inputType="textPassword"
            android:maxLength="10" />

        <Button
            android:id="@+id/sing_in_login"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15dip"
            android:layout_marginLeft="35dip"
            android:layout_marginRight="35dip"
            android:layout_marginTop="15dip"
            android:background="@drawable/login_selector"
            android:hint="@string/login"
            android:text="@string/login_btn"
            android:textColor="@color/white"
            android:textSize="20sp" />

        <Button
            android:id="@+id/nameOfUser"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="35dip"
            android:layout_marginRight="35dip"
            android:layout_marginTop="30dip"
            android:background="@drawable/login_selector"
            android:textColor="@color/white"
            android:textSize="20sp" />

        <Button
            android:id="@+id/sync_info_update"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="30dip"
            android:layout_marginLeft="35dip"
            android:layout_marginRight="35dip"
            android:layout_marginTop="20dip"
            android:background="@drawable/login_selector"
            android:text="ส่งข้อมูล"
            android:textColor="@color/white"
            android:textSize="20sp" />
    </LinearLayout>

</RelativeLayout>