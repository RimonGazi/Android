            android:text="ส่งต่อ พมจ./ศพส. เพื่อจัดหาครอบครัวทดแทน" />

        <CheckBox
            android:id="@+id/h26"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="อื่นๆ เช่นติดตามญาติ" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="3" />

        <CheckBox
            android:id="@+id/h31"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="แจ้งเหตุ OSCC หรือหน่วยงานที่เกี่ยวข้อง" />

        <CheckBox
            android:id="@+id/h32"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
