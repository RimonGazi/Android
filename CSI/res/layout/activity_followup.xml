        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="5" />

        <CheckBox
            android:id="@+id/h51"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ขอคำแนะนำจากเจ้าหน้าที่สาธารณสุข" />

        <CheckBox
            android:id="@+id/h52"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="อื่นๆ" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="6" />

        <CheckBox
            android:id="@+id/h61"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ขอคำแนะนำจากโรงเรียน/ฝ่ายการศึกษา/สาธารณสุข" />

        <CheckBox
            android:id="@+id/h62"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="อื่นๆ เช่น ประสานงานกับหน่วยงานอื่นๆ" />

        <Button
            android:id="@+id/done"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="เริ่มประเมิน" />
    </LinearLayout>

</ScrollView>