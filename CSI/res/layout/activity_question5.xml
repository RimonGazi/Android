<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".Question5" >

    <ScrollView
        android:id="@+id/scrollView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/q5name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Name" />

            <TextView
                android:id="@+id/q5main"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="พัฒนาการด้านอารมณ์ จิตใจ และสังคม" />

            <TextView
                android:id="@+id/q51"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="เด็กมีภาวะซึมเศร้า เก็บกด" />

            <Spinner
                android:id="@+id/q5a1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/q52"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="การควบคุมอารมณ์" />

            <Spinner
                android:id="@+id/q5a2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/q53"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="การเข้าสังคมกับเพื่อน " />

            <Spinner
                android:id="@+id/q5a3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/q54"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="มีพฤติกรรมทางสังคมที่ส่งผลต่อการใช้ช่วิตและการอยู่ร่วมกับคนอื่นหรือไม่ เช่น ติดเกมส์ ติดยาเสพติด เด็กกวนเมือง ติดอยู่กับพ่อแม่มากเกินไป" />

            <Spinner
                android:id="@+id/q5a4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>

    </ScrollView>
</RelativeLayout>
